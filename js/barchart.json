{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Grouped Bar Chart: Tourist Comparison by State and Year",
    "fontSize": 20,
    "anchor": "start",
    "color": "navy"
  },
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/BlueberryyyInc/Data-Visualisation-2/refs/heads/master/data/structured_tourist_data_2014_2024%20(2).csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "year_select",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"],
        "labels": ["All", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.State != null && datum.State != ''"
    },
    {
      "filter": "year_select == 'All' || datum.Year == +year_select"
    },
    {
      "calculate": "year_select == 'All' ? datum.Year : datum.State",
      "as": "ColorField"
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true,
    "cornerRadiusEnd": 2,
    "size": 10
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": {
        "labelAngle": -45,
        "title": "State"
      }
    },
    "xOffset": {
      "field": "Year",
      "type": "ordinal"
    },
    "y": {
      "field": "Total",
      "type": "quantitative",
      "title": "Tourist Count"
    },
    "color": {
      "field": "ColorField",
      "type": "nominal",
      "scale": {
        "scheme": "category20"
      },
      "title": "Color"
    },
    "tooltip": [
      { "field": "State", "title": "State" },
      { "field": "Year", "title": "Year" },
      {
        "field": "Total",
        "title": "Tourist Count",
        "format": ","
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}


